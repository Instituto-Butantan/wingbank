<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MosquitoLab - Wingbank</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        body {
            background: #fff !important;
        }
    </style>
</head>
<body>
    <div class="search-center">

        <div class="search-box">

            <div class="col-lg-12">
                <img class="wingbank-logo wingbank-logo-full" src="~/Content/Images/Logo.png" />
            </div>
            <div class="col-lg-12">
                @Html.Partial("~/Views/Shared/Components/_SimpleSearch.cshtml")
            </div>
            <div class="col-lg-12">
                <br />
                @Html.ActionLink("Advanced Search", "Index", "Search") | 
                @Html.ActionLink("Instructions", "Index", "Instructions") |
                @Html.ActionLink("Terms of use", "Index", "Terms")
            </div>

            <div class="col-md-12">
                <p dabase-info></p>
            </div>
        </div>
        
        <footer class="footer">

            <center style="margin-top: 100px">
                <p>&copy; @DateTime.Now.Year - MosquitoLab - WingBank </p>
                <p>
                   Found an error? Contact us. <a href="mail:wingbank@butantan.gov.br">wingbank@butantan.gov.br</a>
                </p>
            </center>

        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    @{
        var h = HttpContext.Current.Request.ApplicationPath;
    }

    <script>
    var _env = { host: "@(h == "/" ? h : h + "/" )" };
    </script>

    <script src="~/Content/app/environment/environment.js"></script>
    <script src="~/Content/app/search/database-info.js"></script>
</body>
</html>
